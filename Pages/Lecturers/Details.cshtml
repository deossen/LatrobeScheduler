@page
@model LaTrobeScheduler.Pages.Lecturers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Lecturer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lecturer.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lecturer.FirstMidName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.FirstMidName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lecturer.WorkLoad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.WorkLoad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lecturer.KnownSubjects)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.KnownSubjects)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lecturer.EmailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.EmailAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lecturer.SubjectInstances)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Subject Name</th>
                    <th>Start Date</th>
                </tr>
                @foreach (var item in Model.Lecturer.SubjectInstances)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject.SubjectName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Lecturer?.LecturerID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
